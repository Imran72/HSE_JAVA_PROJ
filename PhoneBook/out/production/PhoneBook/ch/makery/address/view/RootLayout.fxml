<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.controller.RootLayout">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="Файл">
               <items>
                  <MenuItem fx:id="addButton" mnemonicParsing="false" onAction="#handleNewPerson" text="Добавить новый контакт" />
                  <MenuItem fx:id="editButton" mnemonicParsing="false" onAction="#handleEditPerson" text="Редактировать контакт" />
                  <MenuItem fx:id="deleteButton" mnemonicParsing="false" onAction="#handleDeletePerson" text="Удалить контакт" />
                  <MenuItem fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" text="Выйти" />
               </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Настройки">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleImportContacts" text="Импортировать" />
                  <MenuItem mnemonicParsing="false" onAction="#handleExportContacts" text="Экспортировать" />
            </items>
          </Menu>
          <Menu fx:id="Mayya" mnemonicParsing="false" onAction="#handleInformationDesk" text="Справка">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleInformationDesk" text="Справка" />
               </items></Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
